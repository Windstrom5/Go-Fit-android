<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_before_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_after_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="After: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_before_deposit"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/value_before_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_before_deposit"
        app:layout_constraintTop_toTopOf="@id/text_before_deposit" />

    <TextView
        android:id="@+id/value_after_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_after_deposit"
        app:layout_constraintTop_toTopOf="@id/text_after_deposit"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintTop_toBottomOf="@id/text_after_deposit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
