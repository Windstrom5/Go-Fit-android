<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_before_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before: "
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_after_deposit"
        android:layout_width="49dp"
        android:layout_height="18dp"
        android:layout_marginTop="36dp"
        android:textSize="15dp"
        android:text="After: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_before_deposit" />

    <TextView
        android:id="@+id/value_before_deposit"
        android:layout_width="126dp"
        android:layout_height="18dp"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/text_before_deposit"
        app:layout_constraintTop_toTopOf="@id/text_before_deposit" />

    <TextView
        android:id="@+id/value_after_deposit"
        android:layout_width="126dp"
        android:layout_height="18dp"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/text_after_deposit"
        app:layout_constraintTop_toTopOf="@id/text_after_deposit"
 />

</androidx.constraintlayout.widget.ConstraintLayout>
