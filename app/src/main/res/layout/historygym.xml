<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tgl"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tanggal        :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_tanggalHistorygym"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tgl" />

        <TextView
            android:id="@+id/jam"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Jam Mulai    :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tgl" />

        <TextView
            android:id="@+id/tv_jamMulaiHistory"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Jam"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/jam"
            app:layout_constraintTop_toBottomOf="@+id/tv_tanggalHistorygym"/>

        <TextView
            android:id="@+id/jamselesai"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Jam Selesai :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jam" />

        <TextView
            android:id="@+id/tv_jamselesaiHistory"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Instruktur"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/jamselesai"
            app:layout_constraintTop_toBottomOf="@+id/tv_jamMulaiHistory" />
        <TextView
            android:id="@+id/status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Status           :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jamselesai" />

        <TextView
            android:id="@+id/tv_statusHistory"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/status"
            app:layout_constraintTop_toBottomOf="@+id/tv_jamselesaiHistory" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>